;; Ramen Timer (3 minutes) - ASCII only
;; Simple timer implementation using basic LISP functions

;; Display timer start message
(print "=== Ramen Timer ===")
(print "Starting 3-minute countdown...")

;; Record start time
(print "Recording start time...")

;; Show countdown every 30 seconds
(print "30 seconds passed...")
(sleep 30)

(print "1 minute passed...")
(sleep 30)

(print "1 minute 30 seconds passed...")
(sleep 30)

(print "2 minutes passed...")
(sleep 30)

(print "2 minutes 30 seconds passed...")
(sleep 30)

(print "3 minutes completed!")
(print "*** RAMEN IS READY! ***")
(print "Time to enjoy your delicious ramen!")
